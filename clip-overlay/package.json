{
  "name": "snippetstash",
  "version": "0.1.0",
  "description": "Clipboard Manager for Windows",
  "main": "main.js",
  "author": "Fouwaz",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dev": "NODE_ENV=development electron .",
    "dev-win": "set NODE_ENV=development && electron ."
  },
  "dependencies": {
    "@tesseract.js-data/eng": "^1.0.0",
    "electron-store": "^8.2.0",
    "tesseract.js": "^6.0.1"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.fouwaz.snippetstash",
    "productName": "SnippetStash",
    "asar": true,
    "extraResources": [
       { "from": "node_modules/@tesseract.js-data/eng", "to": "tessdata/eng" }
    ],
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "overlay.html",
      "styles.css",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icons/icon.ico",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Clip Overlay"
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}-${arch}.exe"
    },
    "publish": null
  }
}
