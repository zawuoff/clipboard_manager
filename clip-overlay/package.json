{
  "name": "ctrlc",
  "version": "0.2.1",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --win nsis",
    "dev": "cross-env NODE_ENV=development electron ."
  },
  "build": {
    "appId": "com.fouwaz.ctrlc",
    "productName": "CtrlC",              
    "files": [
      "**/*",
      "!dist/**",                        
      "!out/**"
    ],
    "asar": true,
    "asarUnpack": [
      "**/*.node",
      "**/tesseract*.wasm",
      "**/@tesseract.js*/**/*.wasm"
    ],
    "directories": {
      "buildResources": "build"
    },
    "extraResources": [
      { "from": "node_modules/@tesseract.js-data/eng", "to": "tessdata/eng" }
    ],
    "win": {
      "target": ["nsis"],
      "icon": "build/CtrlC-icon-v2.ico",
      "artifactName": "CtrlC-${version}-${os}-${arch}-Setup.${ext}" 
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "deleteAppDataOnUninstall": false
    }
  },
  "dependencies": {
    "@tesseract.js-data/eng": "^1.0.0",
    "active-win": "^8.2.1",
    "electron-store": "^8.1.0",
    "tesseract.js": "^6.0.0"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "electron-reload": "^2.0.0-alpha.1"
  }
}
