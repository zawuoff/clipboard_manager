{
  "name": "snippetstash",
  "version": "0.1.1",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --win nsis"
  },
  "build": {
    "appId": "com.fouwaz.snippetstash",
    "productName": "SnippetStash",
    "files": [
      "**/*"
    ],
    "asar": true,
    "asarUnpack": [
      "**/*.node",
      "**/tesseract*.wasm",
      "**/@tesseract.js*/**/*.wasm"
    ],
    "directories": {
      "buildResources": "build"
    },
    "extraResources": [
      { "from": "node_modules/@tesseract.js-data/eng", "to": "tessdata/eng" }
    ],
    "win": {
      "target": [ "nsis" ],
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false
    }
  }
}
